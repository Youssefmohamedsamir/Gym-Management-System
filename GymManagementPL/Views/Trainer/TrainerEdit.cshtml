@model GymManagementBLL.ViewModels.TrainerViewModels.TrainerToUpdateViewModel

<div class="container mt-4">
    <header class="mb-4">
        <h3 class="text-primary-color">Edit Trainer</h3>
        <p class="text-muted">Update trainer information</p>
    </header>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <div class="mb-4 pb-3 border-bottom">
                        <small class="text-muted d-block mb-1">Editing Profile For</small>
                        <h4 class="mb-0 text-black">@Model.Name</h4>
                    </div>

                    @using (Html.BeginForm("Edit", "Trainer", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <!-- Hidden ID -->
                        @Html.HiddenFor(m => m.Name)

                        <!-- Personal Information -->
                        <div class="section-header mb-3">
                            <h5 class="text-primary fw-bold">Personal Information</h5>
                            <hr class="mt-2" />
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.BuildingNumber, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.BuildingNumber, new { @class = "form-control" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Street, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.City, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            </div>
                        </div>

                        <!-- Professional Information -->
                        <div class="section-header mb-3">
                            <h5 class="text-primary fw-bold">Professional Information</h5>
                            <hr class="mt-2" />
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <label class="form-label fw-semibold">
                                    Specialization <span class="text-danger">*</span>
                                </label>

                                <div class="form-check">
                                    @Html.RadioButtonFor(m => m.Specialties, "GeneralFitness", new { @class = "form-check-input" })
                                    <label class="form-check-label">General Fitness</label>
                                </div>

                                <div class="form-check">
                                    @Html.RadioButtonFor(m => m.Specialties, "Yoga", new { @class = "form-check-input" })
                                    <label class="form-check-label">Yoga</label>
                                </div>

                                <div class="form-check">
                                    @Html.RadioButtonFor(m => m.Specialties, "Boxing", new { @class = "form-check-input" })
                                    <label class="form-check-label">Boxing</label>
                                </div>

                                <div class="form-check">
                                    @Html.RadioButtonFor(m => m.Specialties, "CrossFit", new { @class = "form-check-input" })
                                    <label class="form-check-label">CrossFit</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-fill">
                                <i class="bi bi-check-lg me-1"></i> Update Trainer
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}