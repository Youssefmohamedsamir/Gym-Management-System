@model GymManagementBLL.ViewModels.TrainerViewModels.TrainerViewModel

@{
    ViewBag.Title = "Delete Trainer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-5 shadow text-center border-0">

                <p class="fs-3 text-primary-color mb-4">
                    Are you sure you want to delete this Trainer?
                </p>

                <div class="alert alert-warning text-start" role="alert">
                    <strong>Warning!</strong> This action cannot be undone.
                    All trainer data will be permanently deleted.
                </div>

                <div class="trainer-summary text-start mb-4 border rounded p-3 bg-light">
                    <p class="mb-1"><strong>Name:</strong> @Model.Name</p>
                    <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
                    <p class="mb-1"><strong>Phone:</strong> @Model.Phone</p>
                    <p class="mb-0"><strong>Specialization:</strong> @Model.Specialties</p>
                </div>

                @using (Html.BeginForm("DeleteConfirmed", "Trainer", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <div class="buttons d-flex justify-content-between gap-3">
                        <a asp-controller="Trainer" asp-action="Index"
                           class="btn btn-outline flex-fill">
                            No
                        </a>

                        <button type="submit" class="btn btn-fill flex-fill">
                            Yes, Delete
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>